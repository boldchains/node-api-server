{
  "name": "track-drones-server",
  "version": "0.1.0",
  "description": "A prototype on tracking drones geo positions",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel src --out-dir build -s --ignore src/__tests__/**",
    "build": "npm run clean && npm run build-server",
    "prestart": "npm run build",
    "start": "node ./build/index.js",
    "lint": "eslint src",
    "test": "jest",
    "watch-tests": "esw src && jest --watchAll",
    "dev": "nodemon --watch ./src --ignore ./src/__tests__ -x \"npm start\"",
    "coverage": "jest --coverage",
    "simulator": "node ./build/simulate/drones.js"
  },
  "keywords": [
    "drone",
    "track",
    "geolocation",
    "prototype"
  ],
  "author": "mohankumaranna",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-simple-errors": "^1.0.0",
    "help": "^3.0.2",
    "isvalid": "^1.6.6",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1"
  },
  "devDependencies": {
    "babel-jest": "^23.4.0",
    "eslint": "^5.1.0",
    "eslint-watch": "^4.0.2",
    "jest": "^23.4.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "superfast": "^0.2.5"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
